{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "on",
				"recommended": true,
				"useSortedKeys": "off"
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!.venv",
			"!coverage",
			"!fixtures",
			"!lib",
			"!node_modules",
			"!output"
		],
		"maxSize": 15728640
	},
	"json": {
		"formatter": { "enabled": true }
	},
	"html": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"rules": {
			"style": {
				"useArrayLiterals": "off"
			}
		}
	}
}
