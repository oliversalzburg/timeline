{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"assist": {
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "on",
				"recommended": true,
				"useSortedKeys": "off"
			}
		},
		"enabled": true
	},
	"files": {
		"includes": [
			"**",
			"!.venv/**",
			"!coverage/**",
			"!fixtures/**",
			"!lib/**",
			"!node_modules/**",
			"!output/**"
		],
		"maxSize": 15728640
	},
	"json": {
		"formatter": { "enabled": true }
	},
	"html": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"rules": {
			"style": {
				"useArrayLiterals": "off"
			}
		}
	}
}
