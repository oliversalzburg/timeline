{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"checkJs": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"incremental": true,
		"isolatedModules": true,
		"lib": ["DOM", "ESNext", "WebWorker"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "lib/contrib",
		"resolveJsonModule": true,
		"rootDir": "contrib",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"tsBuildInfoFile": "lib/tsconfig.contrib.tsbuildinfo",
		"target": "ESNext",
		"types": ["@types/node", "@types/web"],
		"useDefineForClassFields": true
	},
	"include": ["contrib"],
	"references": [
		{
			"path": "tsconfig.source.json"
		}
	]
}
